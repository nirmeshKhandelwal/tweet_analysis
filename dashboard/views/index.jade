extends layout
block styles

block scripts
	// enable socket.io communication on the client-side
	script(src='/socket.io/socket.io.js')
	script(src='/javascripts/lib/d3.min.js')
	script(src='/javascripts/lib/topojson.min.js')
	script(src='/javascripts/lib/vis.min.js')
	script(src='/javascripts/lib/datamaps.all.js')
	script(src='/javascripts/lib/wordcloud2.js')
	script(src='/javascripts/country.js')
	script(src='/javascripts/dashboard.js')
	script(src='/javascripts/timeseries.js')

block content
	div(class="container")
		div.page-header: h1 Twitter Dashboard : Cricket Match Analysis
							img(src="/images/twitter_icon.png")
		div(class="row")
			// For Tweet Log Series Analysis
			div(class="col-lg-8")
				div(class="panel panel-info" id="tweet_panel")
					div(class="panel-heading")
						h3(class="panel-title") Tweets Log
					div(class="panel-body" style="overflow:auto")
						div(id="tweet_log" style="position: relative; width:900px; height:200px;")

			//For Tweets Analysis Text						
			div(class="col-lg-4")
				div(class="panel panel-info" id="tweet_anl_panel")
					div(class="panel-heading")
						h3(class="panel-title") Analysis
					div(class="panel-body")
						div(id="tweet_analysis" style="position: relative; height:200px;")


		div(class="row")
			// For Time Series Analysis
			div(class="col-lg-12")
				div(class="panel panel-info" id="ts_panel")
					div(class="panel-heading")
						h3(class="panel-title") Time Series
					div(class="panel-body")
						div(style="display:none")
							select(id="strategy")
								option(value="continuous" selected)
						div(id="timeseries" style="position: relative; height:460px;")

		div(class="row")
				
			// For Space Series Analysis
			div(class="col-lg-12")
				div(class="panel panel-info" id="s_panel")
					div(class="panel-heading")
						h3(class="panel-title") Geo Heat Map
					div(class="panel-body")
						div(id="worldmap" style="position: relative; height:520px;")


		div(class="row")
			div(class="col-lg-12")
				div(class="panel panel-info" id="w_panel")
					div(class="panel-heading")
						h3(class="panel-title") Word Cloud
					div(class="panel-body")
						div(id="w_cloud" style="position: relative; height:400px;")
